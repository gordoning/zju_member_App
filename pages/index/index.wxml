<!--index.wxml-->
<view class="container">

  <view style='width: 220rpx; display:flex; justify-content: center; align-items:center; '>
      <image mode='widthFix' src='../../images/浙大校友会图标.jpg'></image>
  </view>

  <view style='display:flex; justify-content: center; align-items:center; '>
    <text>浙江大学无锡校友会-会员缴费</text>

  </view>

  <!-- 缴纳会费的表单 -->
  <view style="margin-top: 10px">
    <view class="weui-cells weui-cells_after-title">

      <!-- // 缴费年限 -->
      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">类别</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="bindMemberYearChange" value="{{memberIndex}}" range="{{all_member_year}}">
            <view class="weui-select weui-select_in-select-after">{{all_member_year[memberIndex]}}年会费</view>
          </picker>
        </view>
      </view>


      <!--姓名  -->
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">姓名</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="输入您的全名" bindinput="editName" />
        </view>
      </view>


      <!--手机号  -->
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">手机号</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="输入您的手机号" bindinput="editPhone" />
        </view>
      </view>

      <!-- 会费额度 -->
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">金额</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" type="digit" placeholder="50元起" bindinput="editAmount" />
        </view>
      </view>
    </view>

    <view class="weui-cells__tips">您支付的会费，将直接入账‘浙江大学无锡校友会’的资金账户</view>

    <view style="background-color: #FF534D; height: 80rpx;display:flex; justify-content: center; align-items:center; border-radius:10rpx;margin-top:10rpx; " bindtap='donate'>
      <text style='color: #fff'>确定支付</text>
    </view>
  </view>

</view>